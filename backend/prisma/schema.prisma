generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models Riot Games
model WhatsHappening {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  icon      String
  image     String
  link      String
  thumbMain Boolean @default(false)
}

model Games {
  id        Int      @id @default(autoincrement())
  launchImg String   @unique
  logotype  String
  platforms String[]
  link      String
}

model Esports {
  id   Int    @id @default(autoincrement())
  img  String @unique
  logo String
  link String
}

model Entertainments {
  id   Int    @id @default(autoincrement())
  img  String @unique
  logo String
  link String
}

// Models League Of Legends
model FeaturedNews {
  id          Int    @id @default(autoincrement())
  img         String @unique
  type        String
  date        String
  title       String
  description String
}

model ChooseYourChampion {
  id          Int    @id @default(autoincrement())
  role        String @unique
  background  String
  icon        String
  champion    String
  description String
  imgChampion String
}

model MultipleWaysToPlay {
  id          Int    @id @default(autoincrement())
  way         String @unique
  background  String
  icon        String
  video       String
  title       String
  description String
}
