generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models Riot Games
model WhatsHappening {
  id        Int     @id @default(autoincrement())
  title     String  @unique
  icon      String
  image     String
  link      String
  thumbMain Boolean @default(false)
}

model Games {
  id        Int      @id @default(autoincrement())
  launchImg String   @unique
  logotype  String
  platforms String[]
  link      String
}

model Esports {
  id   Int    @id @default(autoincrement())
  img  String @unique
  logo String
  link String
}

model Entertainments {
  id   Int    @id @default(autoincrement())
  img  String @unique
  logo String
  link String
}

model Forge {
  id        Int      @id @default(autoincrement())
  card      String   @unique
  logotype  String
  platforms String[]
  link      String
}

// Models League Of Legends
model FeaturedNews {
  id          Int    @id @default(autoincrement())
  img         String @unique
  type        String
  date        String
  title       String
  description String
}

model ChooseYourChampion {
  id          Int    @id @default(autoincrement())
  role        String @unique
  background  String
  icon        String
  champion    String
  description String
  imgChampion String
}

model MultipleWaysToPlay {
  id          Int    @id @default(autoincrement())
  way         String @unique
  background  String
  icon        String
  video       String
  title       String
  description String
}

// Models Valorant
model TheLatest {
  id          Int    @id @default(autoincrement())
  img         String @unique
  type        String
  date        String
  title       String
  description String
}

// Models Teamfight Tactics
model LatestNews {
  id          Int    @id @default(autoincrement())
  img         String @unique
  type        String
  date        String
  title       String
  description String
}

//Models Wild Rift
model News {
  id          Int    @id @default(autoincrement())
  img         String @unique
  type        String
  date        String
  title       String
  description String
}

//Models Arcane 
model SliderBanner {
  id    Int    @id @default(autoincrement())
  img   String @unique
  title String
  link  String
}

model Celebrate {
  id          Int    @id @default(autoincrement())
  img         String @unique
  type        String
  date        String
  title       String
  description String
}

model EpisodeStills {
  id  Int    @id @default(autoincrement())
  img String @unique
}

model PaP {
  id          Int     @id @default(autoincrement())
  img         String  @unique
  type        String
  date        String
  title       String
  description String?
}

model Character {
  id          Int    @id @default(autoincrement())
  character   String @unique
  name        String
  background  String
  description String
}

model OurGames {
  id          Int    @id @default(autoincrement())
  background  String @unique
  logo        String
  name        String
  title       String
  description String
  link        String
}

//Riot Merch 
model Banner {
  id            Int     @id @default(autoincrement())
  name          String  @unique
  bannerDesktop String?
  bannerMobile  String?
  color         String
  logo          String?
}

model LatestCollaborations {
  id          Int    @id @default(autoincrement())
  numb        String @unique
  title       String
  description String
  img         String
}

model Products {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  price        Float
  logo         String
  category     String
  tags         String[]
  descriptions String[]
  imgs         String[]
}
